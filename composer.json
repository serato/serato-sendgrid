{
	"name": "serato/sendgrid",
	"homepage": "https://github.com/serato/serato-sendgrid",
	"description": "A library for sending transactional emails using SendGrid",
	"type": "library",
	"require": {
		"php": "^7.1 || ^8.0",
		"sendgrid/sendgrid": "^7 || ^8"
	},
	"require-dev": {
		"phpunit/phpunit": "^7 || ^8",
		"squizlabs/php_codesniffer": "^3.0",
		"enlightn/security-checker": "^1.4",
		"phpstan/phpstan": "^1.4"
	},
	"autoload": {
		"psr-4": {
			"Serato\\SendGrid\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Serato\\SendGrid\\Test\\": "tests/"
		}
	}
}
